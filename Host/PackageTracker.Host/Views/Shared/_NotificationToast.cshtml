<div id="notification-toast-@Model.Id" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <strong class="me-auto">@Model.Title</strong>
        <small class="text-muted">@Model.Date</small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
        @Model.Message
        <br/>
        <a href="#" class="btn btn-sm btn-outline-secondary btn-block" onclick="markAsRead('@Model.Id')"><i class="fa-solid fa-check"></i> Mark as read</a>
    </div>
</div>
